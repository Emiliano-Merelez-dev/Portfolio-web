---
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import SobreMi from "../components/SobreMi.astro";
import Skills from "../components/Skills.astro";
import Proyectos from "../components/Proyectos.astro";
import Contacto from "../components/Contacto.astro";
import "../styles/global.css";
import HeroReact from "../components/HeroReact";
import Footer from "../components/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Portfolio</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-900 text-white">
    <Navbar />
    <main class="flex-grow">
      <HeroReact client:load />
      <SobreMi />
      <Proyectos />
      <Skills />
      <Contacto />
    </main>
    <Footer />
  </body>
</html>
